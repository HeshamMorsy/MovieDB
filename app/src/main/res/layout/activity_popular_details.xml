<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.core.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:context=".ui.views.details.PopularDetailsActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >

            <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/popular_details_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitCenter"
                    app:sriv_right_bottom_corner_radius="12dp"
                    app:sriv_left_bottom_corner_radius="12dp"
                    app:sriv_left_top_corner_radius="12dp"
                    app:sriv_right_top_corner_radius="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:background="@color/colorAccent"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    android:id="@+id/popular_details_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constrainedWidth="true"
                    android:textColor="@android:color/black"
                    tools:text="Name : Hesham Morsy"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/popular_details_image"
                    app:layout_constraintTop_toTopOf="@id/popular_details_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    android:id="@+id/popular_details_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    app:layout_constrainedWidth="true"
                    tools:text="Gender : male"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/popular_details_image"
                    app:layout_constraintTop_toBottomOf="@id/popular_details_name_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>


            <TextView
                    android:id="@+id/popular_details_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constrainedWidth="true"
                    android:textColor="@android:color/black"
                    tools:text="Job : Acting"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/popular_details_image"
                    app:layout_constraintTop_toBottomOf="@id/popular_details_gender"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    android:id="@+id/popular_details_popularity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constrainedWidth="true"
                    android:textColor="@android:color/black"
                    tools:text="Popularity : 34.65"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/popular_details_image"
                    app:layout_constraintTop_toBottomOf="@id/popular_details_job"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>


            <TextView
                    android:id="@+id/popular_details_bd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constrainedWidth="true"
                    android:textColor="@android:color/black"
                    tools:text="Birthday : 1992-03-14"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/popular_details_image"
                    app:layout_constraintTop_toBottomOf="@id/popular_details_popularity"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    android:id="@+id/popular_details_bio_title"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="@string/bio"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="19sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toBottomOf="@id/popular_details_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    android:id="@+id/popular_details_biography"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constrainedWidth="true"
                    android:textStyle="italic"
                    android:textColor="@android:color/black"
                    tools:text="George Walton Lucas Jr. (born May 14, 1944) is an American filmmaker and entrepreneur. Lucas is known for creating the Star Wars and Indiana Jones franchises and founding Lucasfilm, LucasArts and Industrial Light and Magic. He served as chairman of Lucasfilm before selling it to The Walt Disney Company in 2012.\n\nAfter graduating from the University of Southern California in 1967, Lucas co-founded American Zoetrope with filmmaker Fran Lucas rereleased the Star Wars trilogy as part of a special edition featuring several alterations; home media versions with further changes were released in 2004 and 2011. He returned to directing with a Star Wars prequel trilogy comprising The Phantom Menace (1999), Attack of the Clones (2002), and Revenge of the Sith (2005)."
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toBottomOf="@id/popular_details_bio_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
            />



            <TextView
                    android:id="@+id/popular_details_photos_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/photos"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="19sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toBottomOf="@id/popular_details_biography"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/popular_details_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintTop_toBottomOf="@id/popular_details_photos_title"
                    app:layout_constraintBottom_toBottomOf="parent"
            />

            <ProgressBar
                    android:id="@+id/details_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>